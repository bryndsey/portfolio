---
import "@fontsource/rubik-doodle-shadow";
import "@fontsource-variable/rubik";
import Rubik from "@fontsource-variable/rubik/files/rubik-latin-wght-normal.woff2?url";
import RubikDoodle from "@fontsource/rubik-doodle-shadow/files/rubik-doodle-shadow-latin-400-normal.woff2?url";
import "@/index.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, minimum-scale=1.0, maximum-scale=2.0"
    />
    <title>Bryan Lindsey</title>
    <meta
      name="description"
      content="Bryan Lindsey's personal development portfolio"
    />
    <link rel="icon" type="image/svg" href="/src/assets/avatar.svg" />
    <link
      rel="preload"
      type="font/otf"
      href="/fonts/BryanSans-Regular.otf"
      as="font"
      crossorigin
    />
    <link
      rel="preload"
      type="font/woff2"
      href=`${Rubik}`
      as="font"
      crossorigin
    />
    <link
      rel="preload"
      type="font/woff2"
      href=`${RubikDoodle}`
      as="font"
      crossorigin
    />
  </head>
  <body>
    <div
      class="fixed inset-0 bg-gradient-radial from-green-400 to-green-500 -z-50"
    >
    </div>
    <a
      href="/"
      aria-label="Home"
      class="fixed top-[calc(1vw+1vh)] left-[calc(2vw+2vh)] z-[999] squiggly font-extrabold text-[calc(2vw+2vh)] [-webkit-text-stroke:0.05em_#651] text-yellow-300 [text-shadow:0px_0.125em_0.25em_#0004]"
    >
      BL
    </a>
    <slot />
    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" class="size-0">
      <defs>
        <filter id="squiggly-0">
          <feTurbulence
            id="turbulence"
            baseFrequency="0.02"
            numOctaves="3"
            result="noise"
            seed="0"></feTurbulence>
          <feDisplacementMap
            id="displacement"
            in="SourceGraphic"
            in2="noise"
            scale="1"></feDisplacementMap>
        </filter>
        <filter id="squiggly-1">
          <feTurbulence
            id="turbulence"
            baseFrequency="0.02"
            numOctaves="3"
            result="noise"
            seed="1"></feTurbulence>
          <feDisplacementMap in="SourceGraphic" in2="noise" scale="2"
          ></feDisplacementMap>
        </filter>

        <filter id="squiggly-2">
          <feTurbulence
            id="turbulence"
            baseFrequency="0.02"
            numOctaves="3"
            result="noise"
            seed="2"></feTurbulence>
          <feDisplacementMap in="SourceGraphic" in2="noise" scale="1"
          ></feDisplacementMap>
        </filter>
        <filter id="squiggly-3">
          <feTurbulence
            id="turbulence"
            baseFrequency="0.02"
            numOctaves="3"
            result="noise"
            seed="3"></feTurbulence>
          <feDisplacementMap in="SourceGraphic" in2="noise" scale="2"
          ></feDisplacementMap>
        </filter>

        <filter id="squiggly-4">
          <feTurbulence
            id="turbulence"
            baseFrequency="0.02"
            numOctaves="3"
            result="noise"
            seed="4"></feTurbulence>
          <feDisplacementMap in="SourceGraphic" in2="noise" scale="1"
          ></feDisplacementMap>
        </filter>
      </defs>
    </svg>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: BryanSans;
    font-weight: 100;
    src: url(/fonts/BryanSans-Regular.otf) format("opentype");
    font-display: "swap";
  }
</style>
